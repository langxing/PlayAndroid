<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.login.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_regist"
            app:destination="@id/registFragment"/>
    </fragment>

    <fragment
        android:id="@+id/registFragment"
        android:name="com.example.login.ui.regist.RegistFragment"
        android:label="fragment_regist"
        tools:layout="@layout/fragment_regist"/>
</navigation>